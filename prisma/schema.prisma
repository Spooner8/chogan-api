generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  items       Item[]
}

model Item {
  id            String         @id @default(uuid())
  code          String         @unique
  name          String
  description   String?
  purchasePrice Float
  salePrice     Float
  inventory     Int            @default(0)
  quantity      Float
  unit          String
  minimumStock  Int            @default(0)
  categoryId    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?
  expiring      Boolean        @default(false)
  category      Category       @relation(fields: [categoryId], references: [id])
  orderItems    OrderItem[]
  purchaseItems PurchaseItem[]
}

model Customer {
  id        String    @id @default(uuid())
  firstname String
  lastname  String?
  email     String?   @unique
  phone     String?
  address   String?
  zipcode   String?
  city      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  orders    Order[]
}

model OrderStatus {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  orders      Order[]
}

model Order {
  id            String      @id @default(uuid())
  customerId    String
  orderStatusId String
  deliveryDate  DateTime?
  bookedAt      DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  customer      Customer    @relation(fields: [customerId], references: [id])
  orderStatus   OrderStatus @relation(fields: [orderStatusId], references: [id])
  orderItems    OrderItem[]
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  itemId    String
  quantity  Float
  discount  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price     Float
  item      Item     @relation(fields: [itemId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model PurchaseStatus {
  id          String     @id @default(uuid())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?
  purchases   Purchase[]
}

model Purchase {
  id               String         @id @default(uuid())
  purchaseNumber   String?        @unique
  purchaseStatusId String
  deliveryDate     DateTime?
  bookedAt         DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  customsDuty      Float          @default(0)
  vat              Float          @default(0)
  purchaseStatus   PurchaseStatus @relation(fields: [purchaseStatusId], references: [id])
  purchaseItems    PurchaseItem[]
}

model PurchaseItem {
  id         String   @id @default(uuid())
  purchaseId String
  itemId     String
  quantity   Float
  discount   Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  price      Float
  item       Item     @relation(fields: [itemId], references: [id])
  purchase   Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  USER
}
